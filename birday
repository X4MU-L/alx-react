def main():
    a = 0  
    for x in range (0,8):  
        a = a + 1  
        b = ("ğŸ‚ " + "  ğŸ  " * a)
        # \r prints a carriage return first, so `b` is printed on top of the previous line.
        sys.stdout.write('\r'+b)

        time.sleep(0.5)
main()
sleep(1)
main()
