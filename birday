done = False
#here is the animation

# A List of Items

def animate():
    for c in itertools.cycle(['|', '/', '-', '\\']):
        if done:
            break
        sys.stdout.write('\rğŸ‚ ' + c)
        sys.stdout.flush()
        time.sleep(0.1)
    print()
    break_prints("\n\rLet\'s log you in codeworm\n\n\n")


t = threading.Thread(target=animate)
t.start()
time.sleep(10)
done = True
sleep(5)
break_prints(break_texts[5])
sleep(5)
print()
